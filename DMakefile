MAKE = dmake

all :
	cd src
	$(MAKE) all
	cd

nobak :
	-delete  #?~ #?/#?~

clean :
	cd src
	$(MAKE) clean
	cd /man
	$(MAKE) clean
	cd /lisp
	$(MAKE) clean
	cd

realclean :
	cd src
	$(MAKE) realclean
	cd /man
	$(MAKE) realclean
	cd /lisp
	$(MAKE) realclean
	cd
	-delete jade
