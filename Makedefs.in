version=@version@
version_major=@version_major@
version_minor=@version_minor@
rep_version=@rep_version@
SHELL=/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
datadir=@datadir@
bindir=@bindir@
includedir=@includedir@
infodir=@infodir@
libdir=@libdir@
libexecdir=@libexecdir@
localstatedir=@localstatedir@
mandir=@mandir@
sharedstatedir=@sharedstatedir@

jadedir=@jadedir@
lispdir=@lispdir@
dumped_lisp_files=@dumped_lisp_files@
enable_dumped=@opt_enable_dumped@
jadeexecdir=@jadeexecdir@
host_type=@host@

CC=@CC@
LIBTOOL=@LIBTOOL@
CPPFLAGS=-DHAVE_CONFIG_H -DJADE -I. -I.. @CPPFLAGS@
CFLAGS=@CFLAGS@ @X_CFLAGS@
DL_CFLAGS=@DL_CFLAGS@
LDFLAGS=@LDFLAGS@
DL_LDFLAGS=@DL_LDFLAGS@
LIBS=@LIBS@
LIBOBJS=@LIBOBJS@ @ALLOCA@
X11LIBS=@X_PRE_LIBS@ -lX11 @X_LIBS@ @X_EXTRA_LIBS@
dynsuffix=@dynamic_file_suffix@

INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@

HAVE_X11=@HAVE_X11@
HAVE_UNIX=@HAVE_UNIX@

.PHONY: clean realclean install

%.o : %.c
	$(CC) -c $(CPPFLAGS) $(CFLAGS) -o $@ $<

% : %.c
	$(CC) $(CPPFLAGS) $(CFLAGS) $(LDFLAGS) -o $@ $< $(LIBS)

# Rule for libtool controlled C objects
%.lo : %.c
	$(LIBTOOL) $(CC) -c $(CPPFLAGS) $(CFLAGS) $<

# Rule for rep dynamic objects
lib%.la : %.lo
	$(LIBTOOL) gcc -export-dynamic $(CPPFLAGS) $(CFLAGS) -o $@ $*.lo \
	  -rpath $(jadeexecdir)

# This rule builds dependancy files from C source files.
.%.d : %.c
	$(SHELL) -ec '$(CC) -MM $(CPPFLAGS) $< \
	| sed '\''s/$*\.o/& $*.lo .$*\.d/g'\'' > $@'
