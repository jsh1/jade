include ./Makedefs

top_srcdir=@top_srcdir@

BUILDDIRS = lib jade lisp jaded
INSTALLDIRS = lib lisp man
RCLEANDIRS = lisp man

all :
	-set -e; for dir in $(BUILDDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
 	done

install : all installdirs
	if [ -x jaded/jaded ]; then \
	  $(INSTALL_PROGRAM) jaded/jaded $(bindir)/jade; \
	else \
	  $(INSTALL_PROGRAM) jade/jade $(bindir)/jade; \
	fi
	-set -e; for dir in $(INSTALLDIRS); do \
	  ( cd $$dir && $(MAKE) $@ ); \
	done
	$(INSTALL_DATA) ./DOC $(jadedir)/$(version)

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(jadedir)/$(version) $(bindir)

uninstall :
	rm -f $(bindir)/jade $(bindir)/jaded $(bindir)/jadeclient
	-set -e; for dir in $(INSTALLDIRS); do \
	  ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -rf $(jadedir)/$(version)

NEWS : man/news.texi
	(cd man && $(MAKE) ../NEWS )

tar :
	tar -zcT FILES -f jade.tar.gz

nobak :
	rm -f `find . -name '*~' -print`

clean :
	-set -e; for dir in $(BUILDDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
	done
	rm -f *~ NEWS DOC TAGS

realclean :
	-set -e; for dir in $(RCLEANDIRS); do \
	  [ -d $$dir ] && ( cd $$dir && $(MAKE) $@ ); \
	done
	-[ -d lib ] && rm -rf lib
	-[ -d jade ] && rm -rf jade
	-[ -d jaded ] && rm -rf jaded
	rm -f config.cache config.h config.log config.status Makedefs Makefile
	rm -f *~ NEWS DOC TAGS

TAGS :
	etags --language=c `find . -name '*.[ch]' -print` \
	      --language=lisp `find . -name '*.jl' -print`

.PHONY: jade jaded lisp lib install uninstall tar nobak clean realclean TAGS
