version=@version@
SHELL=/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
datadir=@datadir@
top_srcdir=@top_srcdir@
srcdir=@srcdir@
bindir=@bindir@
includedir=@includedir@
infodir=@infodir@
libdir=@libdir@
libexecdir=@libexecdir@
localstatedir=@localstatedir@
mandir=@mandir@
sharedstatedir=@sharedstatedir@

jadedir=@jadedir@
lispdir=@lispdir@

INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@

jade_prog := ../jade/jade

COMPILE_ENV := JADELISPLIB=. JADEDOCFILE=../DOC

all :

lisp :
	$(COMPILE_ENV) $(jade_prog) -geometry +0+0 -log-msgs \
		-f sleep-window -l compiler -f compile-compiler -q
	$(COMPILE_ENV) $(jade_prog) -geometry +0+0 -log-msgs \
		-f sleep-window -f compile-lisp-lib -q

dumped :
	$(COMPILE_ENV) $(jade_prog) -geometry +0+0 -log-msgs \
		-f sleep-window -l dump -f dump-batch -o $(DUMPED_OUT) \
		$(DUMPED_SRCS) -q

install :
	for f in *.jl; \
	do \
	  $(INSTALL_DATA) $$f $(lispdir)/$$f; \
	done
	$(INSTALL_DATA) ../DOC $(lispdir)/../DOC
	$(COMPILE_ENV) $(jade_prog) -geometry +0+0 -log-msgs \
		-f sleep-window -l compiler -f compile-compiler -q
	$(COMPILE_ENV) $(jade_prog) -geometry +0+0 -log-msgs \
		-f sleep-window -f compile-lisp-lib -q

uninstall :
	-rm -f *.jl "$(lispdir)/*.jlc" $(lispdir)/../DOC

clean :
	-rm -f *.jlc *.jld dump.out *~
	-cp ../lib/DOC-bare ../DOC

realclean : clean
	-rm -f Makefile
