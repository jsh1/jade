# defaults
bindir = ../src
lispdir = .

all :

lisp :
	$(bindir)/jade -geometry +0+0 -log-msgs -f sleep-window -f compile-lisp-lib -q

install :
	for f in *.jl; \
	do \
	  $(INSTALL_DATA) $$f $(lispdir)/$$f; \
	done
	$(INSTALL_DATA) ../DOC $(lispdir)/../DOC
	$(bindir)/jade -geometry +0+0 -log-msgs -f sleep-window -f compile-lisp-lib -q

uninstall :
	-rm -f $(lispdir)/*.jl $(lispdir)/*.jlc $(lispdir)/../DOC

clean :
	-rm -f *.jlc *~
	-cp ../src/DOC.bare ../DOC

realclean : clean
	-rm -f ../DOC
